{
    "manifestVersion": "v1",
    "name": "ceph/rbd-csi-plugin:latest",
    "description": "Ceph RBD CSI Plugin for Docker",
    "documentation": "https://github.com/ceph/ceph-csi",
    "interface": {
      "types": ["docker.csinode/1.0"],
      "socket": "csi.sock"
    },
    "entrypoint": [
      "/entrypoint.sh"
    ],
    "env": [
      {
        "name": "DEBUG_ENTRYPOINT",
        "value": "true",
        "settable": ["value"]
      },
      {
        "name": "CEPHCSI_VERBOSITY",
        "value": "6",
        "settable": ["value"]
      },
      {
        "name": "CSI_ENDPOINT",
        "value": "/run/docker/plugins/csi.sock",
        "settable": ["value"]
      },
      {
        "name": "CSI_RBD_PLUGIN_BINARY",
        "value": "cephcsi",
        "settable": ["value"]
      },
      {
        "name": "NODE_ID",
        "value": "default-node",
        "settable": ["value"]
      },
      {
        "name": "CSI_ADDONS_ENDPOINT",
        "value": "",
        "settable": ["value"]
      },
      {
        "name": "DRIVER_NAME",
        "value": "rbd.csi.ceph.com",
        "settable": ["value"]
      },
      {
        "name": "TYPE",
        "value": "rbd",
        "settable": ["value"]
      },
      {
        "name": "INSTANCE_ID",
        "value": "default",
        "settable": ["value"]
      },
      {
        "name": "PID_LIMIT",
        "value": "100",
        "settable": ["value"]
      },
      {
        "name": "METRICS_PORT",
        "value": "8080",
        "settable": ["value"]
      },
      {
        "name": "METRICS_PATH",
        "value": "/metrics",
        "settable": ["value"]
      },
      {
        "name": "POLL_TIME",
        "value": "60s",
        "settable": ["value"]
      },
      {
        "name": "TIMEOUT",
        "value": "60s",
        "settable": ["value"]
      },
      {
        "name": "CLUSTER_NAME",
        "value": "ceph",
        "settable": ["value"]
      },
      {
        "name": "RBD_HARD_MAX_CLONE_DEPTH",
        "value": "4",
        "settable": ["value"]
      },
      {
        "name": "RBD_SOFT_MAX_CLONE_DEPTH",
        "value": "2",
        "settable": ["value"]
      },
      {
        "name": "SKIP_FORCE_FLATTEN",
        "value": "false",
        "settable": ["value"]
      },
      {
        "name": "MAX_SNAPSHOTS_ON_IMAGE",
        "value": "16",
        "settable": ["value"]
      },
      {
        "name": "MIN_SNAPSHOTS_ON_IMAGE",
        "value": "1",
        "settable": ["value"]
      },
      {
        "name": "SET_METADATA",
        "value": "false",
        "settable": ["value"]
      },
      {
        "name": "ENABLE_READ_AFFINITY",
        "value": "false",
        "settable": ["value"]
      },
      {
        "name": "LOG_SLOW_OP_INTERVAL",
        "value": "30m",
        "settable": ["value"]
      }
    ],
    "linux": {
      "capabilities": ["CAP_SYS_ADMIN"],
      "allowAllDevices": true,
      "devices": [],
      "mounts": [
        {
          "type": "bind",
          "source": "/dev",
          "destination": "/dev",
          "options": ["rbind"]
        },
        {
          "type": "bind",
          "source": "/var/lib/kubelet",
          "destination": "/var/lib/kubelet",
          "options": ["rbind"]
        },
        {
          "type": "bind",
          "source": "/etc/ceph",
          "destination": "/etc/ceph",
          "options": ["rbind"]
        },
        {
          "type": "bind",
          "source": "/lib/modules",
          "destination": "/lib/modules",
          "options": ["rbind", "ro"]
        }
      ]
    },
    "propagatedMount": "/data/published"
  }
  